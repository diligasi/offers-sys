<div class="row text-center">
  <%# @offers.size %>
  <% @offers.each do |offer| %>
    <div class="col-lg-3 col-md-6 mb-4">
      <div class="card" data-toggle="tooltip" data-placement="top" title="<%= offer.description %>">
        <% if offer.premium %>
          <div class="premium">Premium</div>
        <% end %>
        <img class="card-img-top" src="http://placehold.it/500x325" alt="">
        <div class="card-body">
          <h4 class="card-title"><%= offer.advertiser_name %></h4>
          <p class="card-text"><%= offer.description %></p>
        </div>
        <div class="card-footer">
          <%= link_to 'Shop Now', offer.url, target: '_blank' %>
        </div>
      </div>
    </div>
  <% end %>
</div>
